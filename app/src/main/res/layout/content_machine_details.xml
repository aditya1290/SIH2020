<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".GetMachineDetails"
    tools:showIn="@layout/activity_get_machine_details"
   >

    <LinearLayout
        android:id="@+id/Nothing_much"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_info"
            android:layout_gravity="start"
            android:layout_marginRight="15dp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MACHINE INFO"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            />

    </LinearLayout>
        <View style="@style/DetailsView"
            android:background="#979696"/>

    <LinearLayout
        android:id="@+id/serialNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"

        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_serial_number"
            android:layout_gravity="start"
            android:layout_marginRight="15dp"
            ></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serial Number:"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/editText1"
                android:layout_width="fill_parent"

                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

    </LinearLayout>
        <View style="@style/DetailsView"
            android:background="#C5C5C5"/>
        <LinearLayout
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_department"
                android:layout_gravity="start"
                android:layout_marginRight="15dp"
                ></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textItem2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department:"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/editText2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <View style="@style/DetailsView"
            android:background="#C5C5C5"/>
        <LinearLayout
            android:id="@+id/serviceTime"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_servicetime"
                android:layout_gravity="start"
                android:layout_marginRight="15dp"
                ></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textItem3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Time:"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/editText3"
                    android:layout_width="fill_parent"

                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <View style="@style/DetailsView"
            android:background="#C5C5C5"/>
        <LinearLayout
            android:id="@+id/installation_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date_of_installation"
                android:layout_gravity="start"
                android:layout_marginRight="15dp"
                ></ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textItem4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Installation:"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/editText4"
                    android:layout_width="fill_parent"

                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </LinearLayout>
        <View style="@style/DetailsView"
            android:background="#C5C5C5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/generateComplaint"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:text="Generate Complaint"
                style="@style/loginButton"/>
            <Button
                android:id="@+id/show_history"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Show History"
                android:paddingRight="5dp"

                style="@style/loginButton"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

